<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:App.PageModels"
             x:Class="App.Pages.EditUserPage"
             x:DataType="pageModels:EditUserPageModel">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- Header -->
            <Label Text="Edit User" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Name -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Name *" FontSize="16" FontAttributes="Bold"/>
                <Entry Text="{Binding Name}" 
                       Placeholder="Enter full name"
                       FontSize="16"/>
                <Label Text="{Binding NameError}" 
                       TextColor="Red" 
                       FontSize="12"
                       IsVisible="{Binding HasNameError}"/>
            </VerticalStackLayout>

            <!-- Email -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Email *" FontSize="16" FontAttributes="Bold"/>
                <Entry Text="{Binding Email}" 
                       Placeholder="Enter email address"
                       Keyboard="Email"
                       FontSize="16"/>
                <Label Text="{Binding EmailError}" 
                       TextColor="Red" 
                       FontSize="12"
                       IsVisible="{Binding HasEmailError}"/>
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="5">
                <Label Text="Password *" FontSize="16" FontAttributes="Bold"/>
                <Entry Text="{Binding Password}" 
            Placeholder="Password"
            Keyboard="Text"
            FontSize="16"/>
                <Label Text="{Binding PasswordError}" 
            TextColor="Red" 
            FontSize="12"
            IsVisible="{Binding HasPasswordError}"/>
            </VerticalStackLayout>

            <!-- Role -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Role *" FontSize="16" FontAttributes="Bold"/>
                <Picker Title="Select role" 
                        SelectedItem="{Binding SelectedRole}">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Employee</x:String>
                            <x:String>Administrator</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
                <Label Text="{Binding RoleError}" 
                       TextColor="Red" 
                       FontSize="12"
                       IsVisible="{Binding HasRoleError}"/>
            </VerticalStackLayout>

            <!-- Absence Days -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Absence Days" FontSize="16" FontAttributes="Bold"/>
                <Entry Text="{Binding AbsenceDays}" 
                       Placeholder="Enter absence days"
                       Keyboard="Numeric"
                       FontSize="16"/>
                <Label Text="{Binding AbsenceDaysError}" 
                       TextColor="Red" 
                       FontSize="12"
                       IsVisible="{Binding HasAbsenceDaysError}"/>
            </VerticalStackLayout>

            <!-- Buttons -->
            <VerticalStackLayout Spacing="10" Margin="0,20,0,0">
                <Button Text="Update User" 
                        Command="{Binding UpdateUserCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="16"
                        HeightRequest="50"/>
                
                <Button Text="Cancel" 
                        Command="{Binding CancelCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        FontSize="16"
                        HeightRequest="50"/>
            </VerticalStackLayout>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}" 
                              IsVisible="{Binding IsBusy}"
                              HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 