<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="App.Pages.AdminPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="Admin Dashboard" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}"/>

            <!-- Admin Navigation Buttons -->
            <Grid ColumnDefinitions="*,*,*,*" Margin="0,10,0,0">
                <Button Grid.Column="0" 
                        Text="Users" 
                        Command="{Binding NavigateToUsersCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="14"/>
                <Button Grid.Column="1" 
                        Text="Absences" 
                        Command="{Binding NavigateToAbsencesCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="14"/>
                <Button Grid.Column="2" 
                        Text="Trips" 
                        Command="{Binding NavigateToTripsCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="14"/>
                <Button Grid.Column="3" 
                        Text="Logout" 
                        Command="{Binding LogoutCommand}"
                        BackgroundColor="{StaticResource Error}"
                        TextColor="White"
                        FontSize="14"/>
            </Grid>

            <Label Text="Business Trips Calendar View" 
                   FontSize="16" 
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray300}}"/>

            <Button Text="Add Custom Holiday" 
                    Command="{Binding ShowAddHolidayDialogCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    HorizontalOptions="Center"
                    WidthRequest="200"/>
        </VerticalStackLayout>

        <!-- Calendar View -->
        <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Default">
            <VerticalStackLayout Spacing="15">
                <!-- Month Navigation -->
                <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,10">
                    <Button Grid.Column="0" 
                            Text="&lt;" 
                            FontSize="18" 
                            WidthRequest="50"
                            Command="{Binding PreviousMonthCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"/>

                    <Label Grid.Column="1" 
                           Text="{Binding CurrentMonthYear}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>

                    <Button Grid.Column="2" 
                            Text="&gt;" 
                            FontSize="18" 
                            WidthRequest="50"
                            Command="{Binding NextMonthCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"/>
                </Grid>

                <!-- Calendar Grid -->
                <Border Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                        StrokeThickness="1"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}">
                    <Grid ColumnDefinitions="*,*,*,*,*,*,*" 
                          RowDefinitions="Auto,*,*,*,*,*,*"
                          Padding="10">

                        <!-- Day Headers -->
                        <Label Grid.Row="0" Grid.Column="0" Text="Sun" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="Mon" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Label Grid.Row="0" Grid.Column="2" Text="Tue" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Label Grid.Row="0" Grid.Column="3" Text="Wed" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Label Grid.Row="0" Grid.Column="4" Text="Thu" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Label Grid.Row="0" Grid.Column="5" Text="Fri" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Label Grid.Row="0" Grid.Column="6" Text="Sat" FontAttributes="Bold" HorizontalOptions="Center"/>

                        <!-- Calendar Days -->
                        <CollectionView Grid.Row="1" Grid.RowSpan="6" Grid.ColumnSpan="7"
                                        ItemsSource="{Binding CalendarDays}"
                                        SelectionMode="Single"
                                        SelectionChanged="OnDaySelected">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical" 
                                                Span="7" 
                                                HorizontalItemSpacing="0" 
                                                VerticalItemSpacing="0"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                                            StrokeThickness="0.5"
                                            BackgroundColor="{Binding BackgroundColor}"
                                            Padding="5">
                                        <Grid RowDefinitions="Auto,Auto">
                                            <Label Grid.Row="0" 
                                                   Text="{Binding DayNumber}" 
                                                   FontSize="12"
                                                   HorizontalOptions="Center"
                                                   TextColor="{Binding TextColor}"/>

                                            <!-- Business Trip Indicators -->
                                            <VerticalStackLayout Grid.Row="1" Spacing="2">
                                                <Frame IsVisible="{Binding HasBusinessTrips}"
                                                       BackgroundColor="{StaticResource Primary}"
                                                       CornerRadius="2"
                                                       HeightRequest="4"
                                                       Margin="2,0"/>
                                                <Frame IsVisible="{Binding HasPendingTrips}"
                                                       BackgroundColor="{StaticResource Warning}"
                                                       CornerRadius="2"
                                                       HeightRequest="4"
                                                       Margin="2,0"/>
                                                <Frame IsVisible="{Binding HasCompletedTrips}"
                                                       BackgroundColor="{StaticResource Success}"
                                                       CornerRadius="2"
                                                       HeightRequest="4"
                                                       Margin="2,0"/>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </Border>

                <!-- Legend -->
                <Border Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                        StrokeThickness="1"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Gray800}}"
                        Padding="15">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Legend" FontAttributes="Bold" FontSize="16"/>
                        <Grid ColumnDefinitions="Auto,*,Auto,*" RowDefinitions="Auto,Auto,Auto,Auto">
                            <Frame Grid.Row="0" Grid.Column="0" 
                                   BackgroundColor="{StaticResource Primary}" 
                                   WidthRequest="20" 
                                   HeightRequest="20" 
                                   CornerRadius="2"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="Approved Trips" VerticalOptions="Center"/>

                            <Frame Grid.Row="0" Grid.Column="2" 
                                   BackgroundColor="{StaticResource Warning}" 
                                   WidthRequest="20" 
                                   HeightRequest="20" 
                                   CornerRadius="2"/>
                            <Label Grid.Row="0" Grid.Column="3" Text="Pending Trips" VerticalOptions="Center"/>

                            <Frame Grid.Row="1" Grid.Column="0" 
                                   BackgroundColor="{StaticResource Success}" 
                                   WidthRequest="20" 
                                   HeightRequest="20" 
                                   CornerRadius="2"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="Completed Trips" VerticalOptions="Center"/>

                            <Frame Grid.Row="2" Grid.Column="0" 
                                   BackgroundColor="LightPink" 
                                   WidthRequest="20" 
                                   HeightRequest="20" 
                                   CornerRadius="2"/>
                            <Label Grid.Row="2" Grid.Column="1" Text="Official Holidays" VerticalOptions="Center"/>

                            <Frame Grid.Row="3" Grid.Column="0" 
                                   BackgroundColor="LightBlue" 
                                   WidthRequest="20" 
                                   HeightRequest="20" 
                                   CornerRadius="2"/>
                            <Label Grid.Row="3" Grid.Column="1" Text="Custom Holidays" VerticalOptions="Center"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Selected Day Details -->
                <Border IsVisible="{Binding IsDaySelected}"
                        Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                        StrokeThickness="1"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                        Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding SelectedDayTitle}" FontAttributes="Bold" FontSize="18"/>

                        <!-- Holiday Info -->
                        <Frame IsVisible="{Binding SelectedDay.IsHoliday}"
                               BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray800}}"
                               Padding="10">
                            <HorizontalStackLayout Spacing="10">
                                <Frame BackgroundColor="{Binding SelectedDay.HolidayColor}" 
                                       WidthRequest="20" 
                                       HeightRequest="20" 
                                       CornerRadius="2"
                                       VerticalOptions="Center"/>
                                <Label Text="{Binding SelectedDay.HolidayTypeText}"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Frame>

                        <!-- Delete Custom Holiday Button -->
                        <Button Text="Delete Custom Holiday"
                                IsVisible="{Binding SelectedDay.IsCustomHoliday}"
                                Command="{Binding DeleteCustomHolidayCommand}"
                                BackgroundColor="{StaticResource Error}"
                                TextColor="White"/>

                        <!-- Business Trips List -->
                        <Label Text="Business Trips:" 
                               IsVisible="{Binding SelectedDay.HasAnyTrips}"
                               FontAttributes="Bold"/>

                        <CollectionView ItemsSource="{Binding SelectedDayTrips}"
                                        HeightRequest="200"
                                        IsVisible="{Binding SelectedDay.HasAnyTrips}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                                            StrokeThickness="1"
                                            Margin="0,5"
                                            Padding="10">
                                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                            <Label Grid.Row="0" Grid.Column="0" 
                                                   Text="{Binding UserFullName}" 
                                                   FontAttributes="Bold"/>
                                            <Label Grid.Row="0" Grid.Column="1" 
                                                   Text="{Binding StatusText}" 
                                                   TextColor="{Binding StatusColor}"/>

                                            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                   Text="{Binding ProjectName}" 
                                                   FontSize="12"/>

                                            <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                   Text="{Binding CarTripDestination}" 
                                                   FontSize="12"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Label Text="No business trips for this day"
                               IsVisible="{Binding SelectedDay.HasNoTrips}"
                               FontAttributes="Italic"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Add Holiday Dialog -->
        <Border Grid.RowSpan="3"
                IsVisible="{Binding IsHolidayDialogVisible}"
                BackgroundColor="#80000000"
                Padding="40">
            <Border BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                    Padding="20"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <VerticalStackLayout Spacing="15" WidthRequest="300">
                    <Label Text="Add Custom Holiday" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <DatePicker Date="{Binding SelectedHolidayDate}"
                                MinimumDate="01/01/2000"
                                MaximumDate="12/31/2100"/>

                    <Entry Placeholder="Holiday Name"
                           Text="{Binding HolidayName}"/>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Button Grid.Column="0"
                                Text="Cancel"
                                Command="{Binding HideAddHolidayDialogCommand}"
                                BackgroundColor="{StaticResource Gray200}"
                                TextColor="{StaticResource Black}"/>

                        <Button Grid.Column="1"
                                Text="Add"
                                Command="{Binding AddHolidayCommand}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="{StaticResource White}"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </Border>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="2" 
                          IsRunning="{Binding IsBusy}" 
                          IsVisible="{Binding IsBusy}"
                          HorizontalOptions="Center"/>
    </Grid>
</ContentPage>